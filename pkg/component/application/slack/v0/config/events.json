{
  "EVENT_NEW_MESSAGE": {
    "title": "New Message Event",
    "description": "A new message event from Slack",
    "configSchema": {
      "type": "object",
      "properties": {
        "channel-names": {
          "description": "Names of the Slack channels to listen to",
          "instillFormat": "array",
          "title": "Channel Names",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "messageSchema": {
      "description": "A new message event from Slack",
      "properties": {
        "timestamp": {
          "description": "Timestamp of the message",
          "instillFormat": "string",
          "title": "Timestamp",
          "type": "string"
        },
        "channel": {
          "description": "Channel information",
          "instillUIOrder": 1,
          "properties": {
            "id": {
              "description": "Unique ID of the Slack channel",
              "instillFormat": "string",
              "title": "Channel ID",
              "type": "string"
            },
            "name": {
              "description": "Name of the Slack channel",
              "instillFormat": "string",
              "title": "Channel Name",
              "type": "string"
            }
          },
          "required": ["id", "name"],
          "title": "Channel",
          "type": "object"
        },
        "user": {
          "description": "User information",
          "instillUIOrder": 2,
          "properties": {
            "id": {
              "description": "Unique ID of the Slack user",
              "instillFormat": "string",
              "title": "User ID",
              "type": "string"
            },
            "name": {
              "description": "Username of the Slack user",
              "instillFormat": "string",
              "title": "User Name",
              "type": "string"
            },
            "real-name": {
              "description": "Real name of the Slack user",
              "instillFormat": "string",
              "title": "Real Name",
              "type": "string"
            },
            "profile": {
              "description": "User profile information",
              "properties": {
                "display-name": {
                  "description": "Display name of the Slack user",
                  "instillFormat": "string",
                  "title": "Display Name",
                  "type": "string"
                }
              },
              "required": ["display-name"],
              "title": "Profile",
              "type": "object"
            }
          },
          "required": ["id", "name", "real-name", "profile"],
          "title": "User",
          "type": "object"
        },
        "text": {
          "description": "Content of the message",
          "instillFormat": "string",
          "title": "Message Text",
          "type": "string"
        }
      },
      "required": ["timestamp", "channel", "user", "text"],
      "title": "New Message Event",
      "type": "object"
    },
    "messageExamples": [
      {
        "timestamp": "1715159446.644219",
        "channel": {
          "id": "G0AKFJBEU",
          "name": "test_channel"
        },
        "user": {
          "id": "user123",
          "name": "testuser",
          "real-name": "Test User",
          "profile": {
            "display-name": "testuser"
          }
        },
        "text": "Hello, world!"
      }
    ]
  }
}
