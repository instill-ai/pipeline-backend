{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Start Operator Component Spec",
  "type": "object",
  "required": ["body"],
  "additionalProperties": false,
  "properties": {
    "body": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z_0-9]*$": {
          "type": "object",
          "required": ["type", "display_name"],
          "properties": {
            "type": {
              "enum": [
                "integer",
                "integer_array",
                "number",
                "number_array",
                "boolean",
                "boolean_array",
                "text",
                "text_array",
                "image",
                "image_array",
                "audio",
                "audio_array",
                "video",
                "video_array"
              ],
              "title": "Type",
              "description": "Data Type"
            },
            "display_name": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
